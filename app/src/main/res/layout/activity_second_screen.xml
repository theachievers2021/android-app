<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesScreen"
    android:background="@color/albastru_inchis"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:backgroundTint="@color/lila"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/localhub_logo"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:background="@drawable/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Cauta servicii..."
                android:iconifiedByDefault="false"

                />
        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewLocation"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        />



</LinearLayout>