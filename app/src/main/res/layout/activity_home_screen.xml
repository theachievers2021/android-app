<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blueL_200"
    tools:context=".HomeScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="@drawable/localhub_logo"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"/>
<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="70dp"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:text="LOCALIZEAZA-MA"-->
<!--            android:textSize="18dp"-->
<!--            android:id="@+id/current_location"-->
<!--            android:backgroundTint="@color/blueL_500"-->
<!--            android:outlineSpotShadowColor="@color/white"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/blueL_500"
            android:layout_marginTop="100dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_location"
                android:layout_marginTop="16dp"/>
            <AutoCompleteTextView

                android:layout_width="270dp"
                android:layout_height="60dp"
                android:id="@+id/insert_place"
                android:hint="LOCALITATE"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:completionThreshold="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_arrow"
                android:id="@+id/search_place"
                android:backgroundTint="@color/white" />

        </LinearLayout>


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/blueL_500"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        app:itemIconSize="35dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>